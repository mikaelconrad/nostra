# Cryptocurrency Investment App Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here

# Server Ports
FRONTEND_PORT=8050
API_PORT=5000

# Investment Settings
INITIAL_INVESTMENT=1000
MONTHLY_CONTRIBUTION=500

# API Keys (for future use)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Database (for future SQLite/PostgreSQL)
DATABASE_URL=sqlite:///crypto_investment.db

# Logging
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Neural Network Settings
EPOCHS=50
BATCH_SIZE=32
LEARNING_RATE=0.001

# Data Settings
DATA_UPDATE_INTERVAL=3600  # seconds
MAX_HISTORICAL_DAYS=1825   # 5 years

# Feature Flags
ENABLE_REAL_SENTIMENT=False
ENABLE_LIVE_TRADING=False
ENABLE_EMAIL_REPORTS=False